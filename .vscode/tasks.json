{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Air (serve)",
            "type": "shell",
            "command": "air",
            "args": ["-c", "air.toml"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "isBackground": true
        },
        {
            "label": "Run Air (worker)",
            "type": "shell",
            "command": "air",
            "args": ["-c", "air-worker.toml"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "isBackground": true
        },
        {
            "label": "Wait for Delve (port 2345)",
            "type": "shell",
            "command": "go",
            "args": ["run", "./scripts/go/wait_port/wait_port.go", "2345"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}
